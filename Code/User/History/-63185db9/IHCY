#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias grep='grep --color=auto'
PS1='[\u@\h \W]\$ '
if [[ $TERM == xterm-kitty ]]; then
    fastfetch --logo-type kitty --logo "$(ls ~/.config/fastfetch/Picture/*.png | shuf -n 1)"
fi
